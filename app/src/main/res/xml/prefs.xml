<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <PreferenceCategory app:title="@string/pref_group_appearance">

        <DropDownPreference
            app:defaultValue="system"
            app:entries="@array/pref_theme_entries"
            app:entryValues="@array/pref_theme_values"
            app:icon="@drawable/ic_theme"
            app:key="theme"
            app:title="@string/pref_theme"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="group_sync"
        app:title="@string/pref_group_sync"
        >

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_network"
            app:key="sync_over_wifi"
            app:summary="@string/pref_sync_over_wifi_summary"
            app:title="@string/pref_sync_over_wifi"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_group_data">

        <Preference
            app:icon="@drawable/ic_export"
            app:key="export_data"
            app:summary="@string/pref_data_export_summary"
            app:title="@string/pref_data_export"
            />

        <Preference
            app:key="clear_data"
            app:title="@string/pref_data_clear"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_group_about">

        <Preference
            app:key="terms_conditions"
            app:title="@string/terms_conditions"
            >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/terms_conditions_url"
                />
        </Preference>

        <Preference
            app:key="privacy_policy"
            app:title="@string/privacy_policy"
            >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/privacy_policy_url"
                />
        </Preference>

        <Preference
            app:icon="@drawable/ic_code"
            app:key="view_source"
            app:title="@string/pref_about_view_source"
            >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/view_source_url"
                />
        </Preference>

        <Preference
            app:key="view_licenses"
            app:title="@string/pref_about_view_licenses"
            />

        <Preference
            app:key="version"
            app:title="@string/pref_about_version"
            tools:summary="1.0.0"
            />
    </PreferenceCategory>

</PreferenceScreen>
