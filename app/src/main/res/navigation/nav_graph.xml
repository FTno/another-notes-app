<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home"
    >

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.maltaisn.notes.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_home_to_edit"
            app:destination="@id/fragment_edit"
            />
        <action
            android:id="@+id/action_home_to_search"
            app:destination="@id/fragment_search"
            />
        <action
            android:id="@+id/action_home_to_sync"
            app:destination="@id/fragment_sync"
            />
    </fragment>

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.maltaisn.notes.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search"
        >
        <action
            android:id="@+id/action_search_to_edit"
            app:destination="@id/fragment_edit"
            />
    </fragment>

    <fragment
        android:id="@+id/fragment_edit"
        android:name="com.maltaisn.notes.ui.edit.EditFragment"
        tools:layout="@layout/fragment_edit"
        >
        <argument
            android:name="noteId"
            android:defaultValue="0L"
            app:argType="long"
            />
    </fragment>

    <fragment
        android:id="@+id/fragment_sync"
        android:name="com.maltaisn.notes.ui.sync.SyncFragment"
        tools:layout="@layout/fragment_sync"
        />

</navigation>
